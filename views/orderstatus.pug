doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/ufarmain.css')
    title Order Status
.container-fluid.form-style
    form#signup.form(action='/produce/orderstatus/?id='+orderedProduct._id name='orderupdate' method='POST')
        .loginfrmdiv
            h3 Update Order 
            hr
            .row
                .col
                    .form-field
                        label(for='orderstatus') Change status:
                        br
                        select.agricofficerinput(name='orderstatus')
                            option(value="Pending" selected = orderedProduct.orderstatus === "Pending") Pending
                            option(value="Delivered" selected = orderedProduct.orderstatus === 'Delivered') Delivered
                        br
                        br

                .form-field
                    input.my-btn-primary.btn.register-btn(type='submit' value='Update')
script(src='bootstrap-js/js/bootstrap.bundle.js')
