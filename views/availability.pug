.container-fluid.form-style
    form#signup.form(action='/produce/available/?id='+item._id name='productupdate' method='POST')
        .loginfrmdiv
            h3 Update Produce 
            hr
            .row
                .col
                    .form-field
                        label(for='availability') Product Availability:
                        br
                        select#activities.select-drpdwn(name='availability')
                            option(value="available" selected = item.availability === "available") Available
                            option(value="booked" selected = item.availability === 'booked') Booked
                            option(value="N/A" selected = item.availability === 'N/A') N/A
                        br
                        br
                    .form-field
                        input.my-btn-primary.btn(type='submit' value='Register')
