extends dashlayout-4-dashboards
block content
    .container-fluid
      .row
        .col-md-12.dash_title
          nav.navbar.navbar-expand-lg.bg-light
              .container-fluid
                a.navbar-brand(href='/indexdash' target='_blank')
                  img.img2(src='/images/logo.png')
                  a.nav-link.active(aria-current='page', href='/indexdash' target="_blank") Home &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                #navbarSupportedContent.collapse.navbar-collapse
                  ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item
                      h4 Agricultural Officer Administration
                  .d-flex(role='search')
                    form(method='POST' action='/logout')
                      button.btn.btn-outline-success(type='submit') Logout
        .col-md-3.dash_left 
          br
          br
          h5 Stock Performance
            hr
            h5 üêÆ Dairy
                h6 Stockbalance (units): #{totalD.totalQuantity}
                h6 Income Estimate: #{new Intl.NumberFormat().format(totalD.totalCost)} /=
            hr
            h5 üçé Horticulture
                h6 Stockbalance (units): #{totalH.totalQuantity}
                h6 Income Estimate: #{new Intl.NumberFormat().format(totalH.totalCost)} /=
            hr
            h5 üêî Poultry
                h6 Stockbalance (units): #{totalP.totalQuantity}
                h6 Income Estimate: #{new Intl.NumberFormat().format(totalP.totalCost)} /=
        .col-md-9.dash_right
          ul#myTab.nav.nav-tabs(role='tablist')
            li.nav-item.tab(role='presentation')
              button#home-tab.nav-link.button(data-bs-toggle='tab', data-bs-target='#home-tab-pane', type='button', role='tab', aria-controls='home-tab-pane', aria-selected='true') üìó Current Farmer Ones
            li.nav-item.tab(role='presentation')
              button#profile-tab.nav-link.button(data-bs-toggle='tab', data-bs-target='#profile-tab-pane', type='button', role='tab', aria-controls='profile-tab-pane', aria-selected='false') üìò All Farmer Ones
            li.nav-item.tab(role='presentation')
              button#contact-tab.nav-link.button(data-bs-toggle='tab', data-bs-target='#contact-tab-pane', type='button', role='tab', aria-controls='contact-tab-pane', aria-selected='false') Sales
            li.nav-item.tab(role='presentation')
              button#disabled-tab.nav-link.button(data-bs-toggle='tab', data-bs-target='#disabled-tab-pane', type='button', role='tab', aria-controls='disabled-tab-pane', aria-selected='false') More
          #myTabContent.tab-content
            #home-tab-pane.tab-pane.fade(role='tabpanel', aria-labelledby='home-tab', tabindex='0')
              .div-in-tab
                a(class='button' href='/registerfo' target="_blank") ‚úçÔ∏èRegister New Farmer One
                br
                br
                table.table.table-bordered 
                    thead
                        tr
                            th Ward 
                            th First Name 
                            th Last Name
                            th Sex
                            th Date of Reg
                            th Status
                            th Activities
                            th Contact 
                            th Update
                    tbody
                        if seniors.length
                            each senior in seniors
                                tr
                                    td #{senior.ward}
                                    td #{senior.firstname}
                                    td #{senior.lastname}
                                    td #{senior.sex}
                                    td #{senior.DateOfReg}
                                    td #{senior.status}
                                    td #{senior.activities}
                                    td #{senior.phoneno}
                                    td
                                        a#report-btn-update(href='/farmerone/update/'+senior._id) Update
            #profile-tab-pane.tab-pane.fade(role='tabpanel', aria-labelledby='profile-tab', tabindex='0')
              .div-in-tab
                a(class='button' href='/registerfo' target="_blank") ‚úçÔ∏èRegister New Farmer One
                br
                br
                table.table.table-bordered 
                    thead
                        tr
                            th Ward 
                            th First Name 
                            th Last Name
                            th Sex
                            th Date of Reg
                            th Status
                            th Activities
                            th Contact 
                            th Update
                    tbody
                        if farmerOnes.length
                            each farmerone in farmerOnes
                                tr
                                    td #{farmerone.ward}
                                    td #{farmerone.firstname}
                                    td #{farmerone.lastname}
                                    td #{farmerone.sex}
                                    td #{farmerone.DateOfReg}
                                    td #{farmerone.status}
                                    td #{farmerone.activities}
                                    td #{farmerone.phoneno}
                                    td
                                        a#report-btn-update(href='/farmerone/update/'+farmerone._id) Update
            #contact-tab-pane.tab-pane.fade(role='tabpanel', aria-labelledby='contact-tab', tabindex='0')
              .div-in-tab
                <p>Populating Sales analytics.
                .loader
            #disabled-tab-pane.tab-pane.fade(role='tabpanel', aria-labelledby='disabled-tab', tabindex='0')
              .div-in-tab
                <p>Network connection unusually slow. Sorry this may take a couple of days!
                .loader
        br
        br
        hr
           //- Accordion Starts here
        #accordionFlushExample.accordion.accordion-flush
          .accordion-item
            h2#flush-headingOne.accordion-header
              button.accordion-button.collapsed(type='button', data-bs-toggle='collapse', data-bs-target='#flush-collapseOne', aria-expanded='false', aria-controls='flush-collapseOne')
                | Dairy Numbers by Ward
            #flush-collapseOne.accordion-collapse.collapse(aria-labelledby='flush-headingOne', data-bs-parent='#accordionFlushExample')
              .accordion-body
                .container-fluid
                  .row
                    .col-md-3.wardbg
                      hr
                      h5 üêÆ Dairy Massaja 1
                          h6 Stockbalance (units): #{totalWardD1.totalQuantity}
                          h6 Income Estimate: #{new Intl.NumberFormat().format(totalWardD1.totalCost)} /=
                      hr
                    .col-md-3
                      hr
                      h5 üêÆ Dairy Massaja 2
                          h6 Stockbalance (units): #{totalWardD2.totalQuantity}
