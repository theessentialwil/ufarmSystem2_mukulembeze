doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/ufarmain.css')
    title Product Approval
.container-fluid.form-style
    form#signup.form(action='/produce/approve/?id='+product._id name='productupdate' method='POST')
        .loginfrmdiv
            h3 Approve Product 
            hr
            .row
                .col
                    .form-field
                        label(for='status') Change status:
                        br
                        select.agricofficerinput(name='status')
                            option(value="Pending" selected = product.status === "Pending") Pending
                            option(value="Approved" selected = product.status === 'Approved') Approved
                        br
                        br

                .form-field
                    input.my-btn-primary.btn.register-btn(type='submit' value='Approve')
script(src='bootstrap-js/js/bootstrap.bundle.js')
