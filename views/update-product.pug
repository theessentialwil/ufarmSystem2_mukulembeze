.container-fluid.form-style
    form#signup.form(action='/produce/update/?id='+product._id name='productupdate' method='POST')
        .loginfrmdiv
            h3 Update Product 
            hr
            .row
                .col-md-12
                    .form-field
                        label(for='productname') Product Name:
                        br
                        select.agricofficerinput(name='productname')
                            option(value="Minced Chicken 2Kg" selected = product.productname === "Minced Chicken 2Kg") Minced Chicken 2Kg
                            option(value="Chicken Wings 2Kg" selected = product.productname === 'Chicken Wings 2Kg') Chicken Wings 2Kg
                            option(value="Chicken Wings 1Kg" selected = product.productname === 'Chicken Wings 1Kg') Chicken Wings 1Kg
                            option(value="Drumsticks 2Kg" selected = product.productname === 'Drumsticks 2Kg') Drumsticks 2Kg
                            option(value="Drumsticks 1Kg" selected = product.productname === 'Drumsticks 1Kg') Drumsticks 1Kg
                            option(value="Chicken 3Kg" selected = product.productname === 'Chicken 3Kg') Chicken 3Kg
                            option(value="Chicken Sausages 2Kg" selected = product.productname === 'Chicken Sausages 2Kg') Chicken Sausages 2Kg
                            option(value="Chicken Sausages 1Kg" selected = product.productname === 'Chicken Sausages 1Kg') Chicken Sausages 1Kg
                            option(value="Minced Chicken 1Kg" selected = product.productname === 'Minced Chicken 1Kg') Minced Chicken 1Kg
                            option(value="Passion Fruit 1Kg" selected = product.productname === 'Passion Fruit 1Kg') Passion Fruit 1Kg
                            option(value="Passion Fruit 2Kg" selected = product.productname === 'Passion Fruit 2Kg') Passion Fruit 2Kg
                            option(value="Lettuce 250g" selected = product.productname === 'Lettuce 250g') Lettuce 250g
                            option(value="Lettuce 500g" selected = product.productname === 'Lettuce 500g') Lettuce 500g
                            option(value="Chicken Liver 2Kg" selected = product.productname === 'Chicken Liver 2Kg') Chicken Liver 2Kg
                            option(value="Chicken Liver 1Kg" selected = product.productname === 'Chicken Liver 1Kg') Chicken Liver 1Kg
                            option(value="Eggs tray" selected = product.productname === 'Eggs tray') Eggs tray
                            option(value="Lettuce 500g" selected = product.productname === 'Lettuce 500g') Lettuce 500g
                            option(value="Lettuce 1Kg" selected = product.productname === 'Lettuce 1Kg') Lettuce 1Kg
                            option(value="Cheese Unsalted 500g" selected = product.productname === 'Cheese Unsalted 500g') Cheese Unsalted 500g
                            option(value="Cheese Unsalted 1Kg" selected = product.productname === 'Cheese Unsalted 1Kg') Cheese Unsalted 1Kg
                            option(value="Ghee Unsalted 500g" selected = product.productname === 'Ghee Unsalted 500g') Ghee Unsalted 500g
                            option(value="Ghee Unsalted 1Kg" selected = product.productname === 'Ghee Unsalted 1Kg') Ghee Unsalted 1Kg
                            option(value="Organic Sour Cream 250g" selected = product.productname === 'Organic Sour Cream 250g') Organic Sour Cream 250g
                            option(value="Chicken Gizzards 1Kg" selected = product.productname === 'Chicken Gizzards 1Kg') Chicken Gizzards 1Kg
                            option(value="Cauliflower 500g" selected = product.productname === 'Cauliflower 500g') Cauliflower 500g
                            option(value="Cauliflower 250g" selected = product.productname === 'Cauliflower 250g') Cauliflower 250g
                            option(value="Broccoli 1Kg" selected = product.productname === 'Broccoli 1Kg') Broccoli 1Kg
                            option(value="Broccoli 500g" selected = product.productname === 'Broccoli 500g') Broccoli 500g
                            option(value="Broccoli 250g" selected = product.productname === 'Broccoli 250g') Broccoli 250g
                            option(value="Cheese Salted 500g" selected = product.productname === 'Cheese Salted 500g') Cheese Salted 500g
                            option(value="Yoghurt 1l" selected = product.productname === 'Yoghurt 1l') Yoghurt 1l
                            option(value="Milk 1l" selected = product.productname === 'Milk 1l') Milk 1l
                            option(value="Milk 0.5l" selected = product.productname === 'Milk 0.5l') Milk 0.5l
                    //- .row
                br
                br
                br
                .col-md-12
                    .form-field
                        label(for='')
                            | Price:
                            //- small  *
                        br
                        input#price.agricofficerinput(type='number' name='unitprice' autocomplete='off' value=product.unitprice)
                br
                br
                br
                .col-md-12
                    .form-field
                        label(for='')
                            | Stock Count:
                            //- small  *
                        br
                        input#ward.agricofficerinput(.agricofficerinputtype='number' name='stockcount' autocomplete='off' value=product.stockcount)
                br
                br
                br
                .col-md-12
                    .form-field
                        label(for='') Delivery Mode:
                        br
                        select.agricofficerinput(name='deliverymode')
                            option(value="pickup" selected = product.deliverymode === "pickup") Pick Up
                            option(value="homedelivery" selected = product.deliverymode === "homedelivery") Home Delivery
                br
                br
                br
                .col-md-12
                    .form-field
                        label Mode of Payment:
                        br
                        select.agricofficerinput(name='modeofpayment')
                            option(value="cash" selected = product.modeofpayment === 'cash') Cash
                            option(value="mobilemoney" selected = product.modeofpayment === 'mobilemoney') Mobile Money   
                br
                br
                br
                .form-field
                    input.my-btn-primary.btn.register-btn(type='submit' value='Update Product')
script(src='bootstrap-js/js/bootstrap.bundle.js')
