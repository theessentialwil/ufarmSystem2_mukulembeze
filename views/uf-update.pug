doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/ufarmain.css')
    title Masajja 1 Farmer One Administration
nav.navbar.navbar-expand-lg.bg-light.pb-4
    .container-fluid
            form.d-flex.mt-2(role='search')
                //- a.btn.btn-style(href='home-page.html') Back
.container-fluid.form-style
    form#signup.form(action='/urbanfarmer/update/?id='+urbanFarmer._id name='ufupdate' method='POST')
        .loginfrmdiv
            h3 Update Urban Farmer 
            hr
            .row
                .col-md-12
                    .form-field
                        label(for='')
                            | First Name:
                            //- small  *
                        br
                        input#price.agricofficerinput(type='text' name='firstname' value=urbanFarmer.firstname)
                br
                br
                br
                .col-md-12
                    .form-field
                        label(for='')
                            | Last Name:
                            //- small  *
                        br
                        input#ward.agricofficerinput(type='text' name='lastname' value=urbanFarmer.lastname)
                        br
                        br
                .col-md-12
                    .form-field
                        label(for='') 
                            | &#x1F4DE;Unique ID:
                        br
                        input#ward.agricofficerinput(type='text' name='uniquenum' value=urbanFarmer.uniquenum)
                br
                br
                br
                .col-md-12
                    .frmelement
                        label(for='activities') Farmer Activities: 
                        br
                        select#activities.select-drpdwn(name='activities')
                            option(value="Diary" selected = urbanFarmer.activities === "Diary") &#x1F404; Diary
                            option(value="Horticulture" selected = urbanFarmer.activities === 'Horticulture') &#x1F34F; Horticulture
                            option(value="Poultry" selected = urbanFarmer.activities === 'Poultry') &#x1F414; Poultry   
                        br
                        br
                        br
                    .form-field
                        input.my-btn-primary.btn.register-btn(type='submit' value='Save Changes')
script(src='bootstrap-js/js/bootstrap.bundle.js')
