doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Welcome FO. Please Create Your Official Account
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/ufarmain.css')
    script(src='https://kit.fontawesome.com/1bfd8a1bfc.js', crossorigin='anonymous')
  body
    .container
      .row.regfrmborderao
        form(action='/registerao' name='agricofficersignup' method="POST")
          h3 Agricultural Officer SignUp
          hr
          .col-md-6
            .frmelement
              label(for='role') Role
              br
              select#role.select-drpdwn(name='role')
                option(value='notspecified') 
                option(value='agriculturalofficer') Agricultural Officer
            .frmelement
              label(for='fo-fname') First Name: 
              br
              input#for-fname.agricofficerinput(type='text', name='firstname')
            .frmelement
              label(for='fo-lname') Last Name:
              br
              input#fo-lname.agricofficerinput(type='text', name='lastname')
            .frmelement
              lable(for='sex') Sex:
              br
              input#male(type='radio', name='sex', value='male') 
              | &nbsp;
              label(for='gender-male') Male  
              | &nbsp; &nbsp; &nbsp; &nbsp;
              input#female(type='radio', name='sex', value='female')
              | &nbsp;
              label(for='gender-female') Female
            .frmelement
              label(for='nin') NIN:
              br
              input#nin.agricofficerinput(type='text', name='nin')
          .col-md-6
            .frmelement
              label(for='phoneno') &#x1F4DE;Phone Number:
              br
              input#phoneno.agricofficerinput(type='text', placeholder='07xxXXXXXX', name='phoneno')
            .frmelement
              label(for='frmDate') Date of Registration:
              br
              input#frmDate(type='text', name='DateOfReg', value='', readonly='')
            .frmelement
              label(for='fouserid') User ID (Email): 
              br
              input#fouserid.agricofficerinput(type='email', name='email', placeholder='Enter Email')
            .frmelement
              label(for='farmer-one-pwd') Password: 
              br
              input.agricofficerinput(type='password', name='password')
          .col-md-12
              hr
              input#frm-btn-ao(type='submit', value='Sign up      üìù')
              br
    //- JavaScript Bundle with Popper
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa', crossorigin='anonymous')
  script(src="/js/date.js")
